    "peperomia-util": "^0.0.17",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.2.0",
    "vuex-persistedstate": "^2.7.1",
    "vuexfire": "^3.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@graphql-codegen/cli": "^1.16.3",
    "@graphql-codegen/introspection": "^1.18.1",
    "@graphql-codegen/typescript": "^1.16.3",
    "@graphql-codegen/typescript-operations": "^1.16.3",
    "@nuxt/typescript-build": "latest",
    "@nuxtjs/eslint-config-typescript": "^5.0.0",
    "@storybook/addon-actions": "^5.3.18",
    "@storybook/addon-links": "^5.3.18",
    "@storybook/addons": "^5.3.18",
    "@storybook/vue": "^5.3.18",
    "@vue/test-utils": "^1.0.0-beta.27",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^24.1.0",
    "babel-loader": "^8.1.0",
    "babel-preset-vca-jsx": "^0.3.4",
    "babel-preset-vue": "^2.0.2",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-formatter-friendly": "^7.0.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-graphql": "^4.0.0",
    "eslint-plugin-jest": "^23.8.0",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-vue": "^7.4.0",
    "eslint-plugin-vue-scoped-css": "^1.1.0",
    "gql-generator": "^1.0.12",
    "husky": "^4.2.3",
    "jest": "^24.1.0",
    "lint-staged": "^10.1.1",
    "prettier": "^2.0.5",
    "vue-jest": "^4.0.0-0"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
