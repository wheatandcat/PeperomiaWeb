{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": [
      "@types/node",
      "@nuxt/types",
      "@nuxtjs/firebase",
      "@nuxt/http",
      "@nuxtjs/apollo",
      "vue-cli-plugin-apollo",
      "vuetify",
      "vue-apollo"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@nuxt/types",
      "./types"
    ]
  },
  "exclude": ["node_modules"]
}
